{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block body %}

	<div class="row">
		<div class="col">
			<h1>Mot de passe oubli√©</h1>
			<p>Veillez indiquer votre adresse mail pour vous envoyer un mail de changement de mot de passe.</p>
		</div>
	</div>

	<div class="row">
		<div class="col">
			
			{% if errors is not empty %}
				<ul>
					{% for error in errors %}
						<li>{{ error }}</li>
					{% endfor %}
				</ul>
			{% endif %}

			{{ form_start(form) }}

			<div class="row justify-content-around form-div">
				<div class="col-5">
					{{ form_row(form.email) }}
				</div>
				<div class="col-5"></div>
			</div>
			<div class="row justify-content-start form-div-button">
				<div class="col-5">
					{{ form_row(form.submit) }}
				</div>
			</div>
			
			{{ form_end(form) }}

		</div>
	</div>

{% endblock %}

