{% extends 'base_admin.html.twig' %}


{% block title %} {{ variant_product.name }} {% endblock %}


{% block body %}

	<div class="row">
		<div class="offset-sm-1">
			<h1>Gestion du produit de {{ variant_product.name }}</h1>
		</div>
	</div>

	<div class="row">
		<div class="offset-sm-1"
			<nav aria-label="breadcrumb">
			  <ol class="breadcrumb">
			    <li class="breadcrumb-item"><a href="{{ path("admin") }}">Administrateur</a></li>
			    <li class="breadcrumb-item"><a href="{{ path("menu_product") }}">Menu produit</a></li>
			    <li class="breadcrumb-item"><a href="{{ path("variants_products") }}">Variantes de produits</a></li>
			    <li class="breadcrumb-item"><a href="{{ path("variant_product", {id: variant_product.id}) }}">{{ variant_product.name }}</a></li>
			    <li class="breadcrumb-item active" aria-current="page">Gestion du produit</li>
			  </ol>
			</nav>
		</div>
	</div>
	<div class="row justify-content-start">
		<div class="col-4 offset-1">
			{{ form_start(form) }}

				<div class="row">
					{{ form_label(form.product) }}
				</div>
				<div class="row">
					{{ form_errors(form.product) }}
					{{ form_widget(form.product) }}
				</div>
				<div class="row">
					{{ form_row(form.submit) }}
				</div>

			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}

