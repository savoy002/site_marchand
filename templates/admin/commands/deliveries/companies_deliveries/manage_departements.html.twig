{% extends 'base_admin.html.twig' %}

{% block title %} Gestion des départements. {% endblock %}

{% block javascripts %}
	{{ parent() }}
    {{ encore_entry_script_tags('departments_selected') }}
{% endblock %}

{% block body %}

	<div class="row">
		<div class="offset-sm-1">
			<h1>Gestion des départements de {{ company.name }}</h1>
		</div>
	</div>

	{% if errors is not empty %}
		<ul>
			{% for error in errors %}
				<li> {{ error }} </li>
			{% endfor %}
		</ul>
	{% endif %}

	<div class="row">
		<div class="offset-sm-1"
			<nav aria-label="breadcrumb">
			  <ol class="breadcrumb">
			    <li class="breadcrumb-item"><a href="{{ path("admin") }}">Administrateur</a></li>
			    <li class="breadcrumb-item"><a href="{{ path("menu_delivery") }}">Menu Livraison</a></li>
			    <li class="breadcrumb-item"><a href="{{ path("company_delivery", {id:company.id}) }}">{{ company.name }}</a></li>
			    <li class="breadcrumb-item active" aria-current="page">Gestion des départements de {{ company.name }}</li>
			  </ol>
			</nav>
		</div>
	</div>

	{{ form_start(form, {'attr' : {'class' : 'form-group'}}) }}

		<div class="row">
			<div class="col offset-1">
				{{ form_widget(form.select_all) }}
				{{ form_label(form.select_all) }}
				{{ form_errors(form.select_all) }}
			</div>
		</div>

		<div class="row">
			<div class="offset-1 col">
				{{ form_label(form.area) }}
			</div>
		</div>
		<div class="row">
			{% for choice in form.area.children %}
				<div class="offset-1 col-3">
					<div class="form-check inline-block ">
						{{ form_widget(choice) }}
			            {{ form_label(choice) }}
			            {{ form_errors(choice) }}
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="row">
			<div class="offset-1 col-4">
				{{ form_row(form.submit) }}
			</div>
			<div class="col-4">
				<a href="{{ path('company_delivery', {id:company.id}) }}" class="btn btn-danger">Annuler</a>
			</div>
		</div>

	{{ form_end(form) }}


{% endblock %}

