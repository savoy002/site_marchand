{% extends 'base_admin.html.twig' %}

{% block title %} Création de livraison {% endblock %}

{% block body %} 

	<div class="row">
		<div class="offset-sm-1">
			<h1>Créer une livraison</h1>
		</div>
	</div>

	<div class="row">
		<div class="offset-sm-1"
			<nav aria-label="breadcrumb">
			  <ol class="breadcrumb">
			    <li class="breadcrumb-item"><a href="{{ path("admin") }}">Administrateur</a></li>
			    <li class="breadcrumb-item"><a href="{{ path("menu_delivery") }}">Menu Livraison</a></li>
			    <li class="breadcrumb-item"><a href="{{ path("company_delivery", {id:company.id}) }}">{{ company.name }}</a></li>
			    <li class="breadcrumb-item active" aria-current="page">Créer une livraison</li>
			  </ol>
			</nav>
		</div>
	</div>

	{{ form_start(form) }}

		{% if errors is not empty %}
			<ul>
				{% for error in errors %}
					<li> {{ error }} </li>
				{% endfor %}
			</ul>
		{% endif %}

		<div class="row form-div">
			<div class="col-2 offset-1 col-xs-10">
				{{ form_label(form.date) }}
				{{ form_errors(form.date) }}
				{{ form_widget(form.date) }}
			</div>
			<div class="col-8 col-xs-10"></div>
		</div>

		{#<div class="row form-div">
				<div class="offset-1">
					{{ form_label(form.departments) }}
				</div>
			<div class="row">
				{% for choice in form.departments.children %}
					<div class="offset-1 col-5 col-xs-10">
						<div class="form-check inline-block ">
							{{ form_widget(choice) }}
				            {{ form_label(choice) }}
				            {{ form_errors(choice) }}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>#}

		<div class="row">
			<div class="offset-1">
				{{ form_label(form.commands) }}
			</div>
		</div>
		<div class="row">
			{% for choice in form.commands.children %}
				<div class="offset-1 col-5">
					<div class="form-check inline-block ">
						{{ form_widget(choice) }}
			            {{ form_label(choice) }}
			            {{ form_errors(choice) }}
					</div>
				</div>
			{% endfor %}
		</div>


		<div class="row justify-content-start form-div-button">
			<div class="offset-1 col-2">
				{{ form_row(form.submit) }}
			</div>
			<div class="offset-1 col-2">
				<a href="{{ path("company_delivery", {id:company.id}) }}" class="btn btn-danger">Annuler</a>
			</div>
		</div>

	{{ form_end(form) }}


{% endblock %}