

<div class="row justify-content-between {{ (css_class is defined)?(css_class) }} border">
	<div class="col-4">
		<p>{{ (show_user)?(comment.user.username) }}
			{% for i in 1..5 %}
			<span class="{{ (i > comment.mark)?
							("star_not_checked"):
							("star_checked") }}">&#x2605;</span>
			{% endfor %}</p>
	</div>
	<div class="col-4">
		<p>{{ comment.createdAt|date("d/m/Y") }}</p>
	</div>
	<div class="col-12">
		<p>{{ comment.text }}</p>
	</div>
</div>

