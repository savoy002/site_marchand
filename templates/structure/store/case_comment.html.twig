

<div class="row justify-content-center show_product-row-comment">
	<div class="col-12">
		<p>{{ comment.user.username }}
			{% for i in 1..5 %}
			<span class="{{ (i > comment.mark)?
							("star_not_checked"):
							("star_checked") }}">&#x2605;</span>
			{% endfor %}</p>
	</div>
	<div class="col-12">
		<p>{{ comment.text }}</p>
	</div>
</div>

